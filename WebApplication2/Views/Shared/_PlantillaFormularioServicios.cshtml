    <link rel="stylesheet" href="@Url.Content("~/Content/SERVCSS/")css/bootstrap.css" />

    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/Content/Padres/")img/logo.ico">
    <!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->

</head>
<body class="landing">
    <!-- Header -->
    <header id="header">
        <h1>@Html.ActionLink("KidsCoin", "Index", "Home")</h1>
        <nav id="nav">
            <ul>
                @{
                    <li>Hola @(Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Servicios Escolares") </li>
                            <li>@Html.ActionLink("Registros", "Registros", "servicios")</li>
                            <li>@Html.ActionLink("PADRES", "Reporte", "Servicios")</li>
                            


                    if (Request.IsAuthenticated)
                    {
                        if (Request.FilePath.Contains("Cafeteria"))
                        {
                            <li>@Html.ActionLink("Reporte de ventas", "ReporteVentas", "Cafeteria")</li>
                        }

                        using (Html.BeginForm("Logout", "MyAccount", FormMethod.Post, new { id = "logoutform" }))
                        {
                            <li>@Html.ActionLink("Cerrar sesión", "Logout", "MyAccount")</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Iniciar sesión", "Login", "MyAccount")</li>
                    }
                }
            </ul>
        </nav>
    </header>
    <section id="banner">
        <div style="width:335px; height:112px"></div>
        <ul class="actions">
            <li>
            </li>
        </ul>
    </section>
    <div class="row col-md-6 col-md-offset-5">
        <div >
            <br />
            <center><h1>Elija el registro que desea hacer.</h1></center> <br />

            <div class="list-group  col-md-4 col-md-offset-2">
                <button type="button" class="list-group-item">@Html.ActionLink("PADRES", "RegistroPadres", "Servicios")</button>
                <button type="button" class="list-group-item">@Html.ActionLink("ALUMNOS ", "RegistroAlumnos", "Servicios")</button>
                <button type="button" class="list-group-item">@Html.ActionLink("Serivios Escolares", "RegistroServiciosEscolares", "Servicios")</button>
                <button type="button" class="list-group-item">@Html.ActionLink("Cafeteria", "RegistroCafeteria", "Servicios")</button>
                <button type="button" class="list-group-item">@Html.ActionLink("Regresar", "Servicios", "Servicios")</li>
                </ul></button>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
