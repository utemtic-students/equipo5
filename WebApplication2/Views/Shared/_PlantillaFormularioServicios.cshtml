    <script src="@Url.Content("~/Content/SERVCSS/")js/jquery.min.js"></script>
    <script src="@Url.Content("~/Content/SERVCSS/")js/skel.min.js"></script>
    <script src="@Url.Content("~/Content/SERVCSS/")js/skel-layers.min.js"></script>
    <script src="@Url.Content("~/Content/SERVCSS/")js/init.js"></script>
    <script src="@Url.Content("~/Content/")js/jquery-1.9.1.min.js"></script>
    <script src="@Url.Content("~/Content/")js/jsqrcode-combined.min.js"></script>
    <script src="@Url.Content("~/Content/")js/html5-qrcode.min.js"></script>


    <link rel="stylesheet" href="@Url.Content("~/Content/SERVCSS/")css/style.css" />
