<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="author" content="pixelhint.com">
    <meta name="description" content="Sublime Stunning free HTML5/CSS3 website template" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/SERVCSS/")css/reset.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/SERVCSS/")css/fancybox-thumbs.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/SERVCSS/")css/fancybox-buttons.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/SERVCSS/")css/fancybox.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/SERVCSS/")css/animate.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/SERVCSS/")css/main.css">
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/Content/Plantilla/")img/logo.ico">

    <script type="text/javascript" src="@Url.Content("~/Content/SERVCSS/")js/jquery.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/SERVCSS/")js/fancybox.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/SERVCSS/")js/fancybox-buttons.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/SERVCSS/")js/fancybox-media.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/SERVCSS/")js/fancybox-thumbs.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/SERVCSS/")js/wow.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/SERVCSS/")js/main.js"></script>


</head>
<body>
    <section class="billboard dark">
        <header class="wrapper dark">
            <nav>
                <ul>
                    @{
                        <li>Hola, @(Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Servicios Escolares")</li>
                        <li>@Html.ActionLink("REGISTRO DE USUARIOS", "RegistroPadres", "Servicios")</li>
                        <li>@Html.ActionLink("PADRES", "Reporte", "Servicios")</li>
                        <li>@Html.ActionLink("ALUMNOS", "Reportealumnos", "Servicios")</li>
                        <li>@Html.ActionLink("ELIMINAR USUARIOS", "RegistroPadres", "Servicios")</li>
                        <li>@Html.ActionLink("VENTAS CAFETERIA", "RegistroPadres", "Servicios")</li>
                        if (Request.IsAuthenticated)
                        {
                            if (Request.FilePath.Contains("Cafeteria"))
                            {
                            <li>@Html.ActionLink("Reporte de ventas", "ReporteVentas", "Cafeteria")</li>
                            }

                            using (Html.BeginForm("Logout", "MyAccount", FormMethod.Post, new { id = "logoutform" }))
                            {
                            <li><a href="javascript:document.getElementById('logoutform').submit()">Cerrar sesión</a></li>
                            }
                        }
                        else
                        {
                        <li>@Html.ActionLink("Iniciar sesión", "Login", "MyAccount")</li>
                        }
                    }
                </ul>
            </nav>
        </header>

     
        <div class="shadow"></div>
    </section><!--  End billboard  -->
    <div>
        @RenderBody()
    </div>
</body>
</html>
