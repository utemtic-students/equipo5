@model IEnumerable<WebApplication2.User>

@{
    ViewBag.Title = "Registro Alumnos";
}
<div style="font-family:Arial">
    <h2>Agregar Alumno</h2>
    <p>
        @using (@Html.BeginForm("RegistroAlumnos", "Servicios", FormMethod.Get))
        {
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "UserName", true) <text>Usuario</text>
            @Html.TextBox("search") <input type="submit" value="Buscar" />
        }
    </p>
    <table border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastNane)
            </th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">
                    No records match search criteria
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastNane)
                    </td>
                    
                </tr>
            }
        }
    </table>
</div> 

@{ Html.RenderAction("FuncionInsertar", "Servicios");}